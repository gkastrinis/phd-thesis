% Relation name and arguments, without colors
\newcommand{\argsRAW}[1]{{\small{\code{#1}}}}
\newcommand{\relnameRAW}[1]{\textsc{\argsRAW{#1}}}
% With color
\newcommand{\args}[1]{\textcolor{Bittersweet}{\argsRAW{#1}}}
\newcommand{\relname}[1]{\textcolor{NavyBlue}{\relnameRAW{#1}}}
\newcommand{\consname}[1]{\textbf{\relname{#1}}}

\newcommand{\rel}[2]{\texttt{\relname{#1}(\args{#2})}}
\newcommand{\cons}[3]{\texttt{\consname{#1}(\args{#2}) = \textbf{\args{#3}}}}

% "Irrelevant" relation
\newcommand{\commrel}[2]{\textcolor{Gray}{\texttt{\relnameRAW{#1}(\argsRAW{#2})}}}

% Aggregation
\newcommand{\aggregate}[3]{\texttt{\relname{#1}\{ #2 \} = \args{#3}}}


