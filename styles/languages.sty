% Custom Datalog

\newcommand{\args}[1]{\(#1\)}
\newcommand{\predname}[1]{\textsc{\textbf{\small{#1}}}}
\newcommand{\pred}[2]{\predname{#1}(\args{#2})}
\newcommand{\funcpred}[3]{\predname{#1} (\args{#2}) = \args{\textbf{#3}}}
\newcommand{\rulearrow}{{\large \textbf{$\leftarrow$}}}
\newcommand{\tab}{\hspace{0.3cm}}
\newcommand{\rulesep}{\vspace{2mm}}

\newenvironment{rules}{%
\vspace{1mm}%
  \hspace{0mm}          % Add vertical and horizontal space
  \begin{minipage}{\columnwidth} % begin minipage
    \hrule\vspace{2mm}               % add beginning horizontal rule
    \begin{tabular}{l}               % begin tabular
}{
    \end{tabular}               % end tabular
  \vspace{2mm}\hrule            % add ending horizontal rule
  \end{minipage}                % end minipage
\vspace{1mm}                    % add vertical space
}
